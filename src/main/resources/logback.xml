<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="COLORED_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %highlight(%msg%n){
                TRACE=blue,
                DEBUG=cyan,
                INFO=green,
                WARN=orange,
                ERROR=red
                }
            </pattern>
        </encoder>
    </appender>

    <root level="trace">
        <appender-ref ref="COLORED_STDOUT" />
    </root>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.deeplearning4j" level="INFO" />

</configuration>